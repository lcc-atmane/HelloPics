<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/More_option"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="7dp">


    <ImageButton
        android:id="@+id/Restoreimg"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/createdshodowforeditview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deletehiddenimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagesView_Hiddenimg"
        app:srcCompat="@drawable/img_history_icon" />

    <ImageView
        android:id="@+id/imagesView_Hiddenimg"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/Restoreimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/deletehiddenimg"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/createdshodowforeditview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Restoreimg"
        app:layout_constraintTop_toBottomOf="@+id/imagesView_Hiddenimg"
        app:srcCompat="@drawable/delete_ic" />


</androidx.constraintlayout.widget.ConstraintLayout>